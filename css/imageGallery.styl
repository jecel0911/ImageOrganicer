
fontColor = #70707C
titleColor = rgb(120, 120, 136)

.separador
	box-shadow 1px 1px
	margin 0
#imagesDetail
	margin 0
	padding 0
.ItemListImage
	list-style none
	img
		width 95%
		max-height 300px
		box-shadow 1px 1px 4px black
		border-radius 12px
		margin 10px

.panelIzquierdo
	//border 1px solid red
	border-right 1px solid gray
	.contenido
		max-height 400px
		overflow scroll
		ul
			li
				list-style none
				margin 0 
				padding 0
				margin-left -40px
				box-shadow 1px 1px 3px gray;
				cursor context-menu
				margin-top 3px
				&:hover
					font-weight bold
	.encabezado
		#frmAddItem
			display none
			padding 0.4em
			box-shadow 3px 7px 10px #383838;
			span 
				color titleColor
				font-weight bold
				float right
			a
				color red
				font-weight bold
				float left
		#frmShowAddItem
			text-align right
			a
				text-decoration underline
		input
			border none
			border-radius 10px
			color fontColor
			display inline
			font-size 1.3em
			width 90%
			&:focus
				border none
				border-radius 10px
				box-shadow 1px 1px 3px gray;
				color fontColor
		button
			display inline
.panelDerecho
	display none
	.contenido
		.detailItem
			#descripcion
				text-align right
				font-family cursive
	#idFormUpload
		box-shadow 1px 1px 10px black
		color blue
		font-size 12px
		padding 10px
		#idbtnUpload
			color blue
			display inline
			float right
			font-weight bold
			&:hover
				box-shadow 0.1em 0.1em 0.4em blue
		#file
			display inline
			&:hover
				box-shadow 0.1em 0.1em 0.3em gray

.tituloPagina
	background #0E0D01
	border-radius 5px
	color white
	font-size 1.5em
	font-weight bold
	margin 0
	padding 5px
		